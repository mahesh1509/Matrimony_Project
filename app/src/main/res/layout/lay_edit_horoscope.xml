<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:cardBackgroundColor="@color/cardViewBackground"
            app:cardCornerRadius="0dp"
            app:cardElevation="3dp"
            app:cardUseCompatPadding="true">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/editHoroscope"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right"
                app:backgroundTint="@android:color/transparent"
                app:srcCompat="@android:drawable/ic_menu_edit" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="left"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="23dp"
            android:text="@string/Horoscope"
            android:textColor="@color/HeadingColor"
            android:textSize="@dimen/Large_Size" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView3"
            android:layout_alignStart="@+id/textView3"
            android:layout_below="@+id/textView3"
            android:layout_marginTop="22dp"
            android:text="@string/Candidates_Caste"
            android:textColor="@color/Black" />

        <TextView
            android:id="@+id/textViewFathersName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="37dp"
            android:layout_marginStart="37dp"
            android:text="@string/Candidates_Caste"
            android:textColor="@color/Black"
            android:layout_above="@+id/textView7"
            android:layout_toRightOf="@+id/textView7"
            android:layout_toEndOf="@+id/textView7" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView"
            android:layout_below="@+id/textView"
            android:layout_marginTop="15dp"
            android:text="@string/Candidates_SubCaste"
            android:textColor="@color/Black" />

        <TextView
            android:id="@+id/textViewFathersLivingStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Candidates_SubCaste"
            android:textColor="@color/Black"
            android:layout_alignBaseline="@+id/textView7"
            android:layout_alignBottom="@+id/textView7"
            android:layout_alignLeft="@+id/textViewFathersName"
            android:layout_alignStart="@+id/textViewFathersName" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView7"
            android:layout_alignStart="@+id/textView7"
            android:layout_below="@+id/textView7"
            android:layout_marginTop="9dp"
            android:text="@string/Candidates_Rashi"
            android:textColor="@color/Black" />

        <TextView
            android:id="@+id/textViewFathersOccupation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textViewFathersLivingStatus"
            android:layout_alignLeft="@+id/textViewFathersLivingStatus"
            android:layout_alignRight="@+id/textViewFathersLivingStatus"
            android:layout_alignStart="@+id/textViewFathersLivingStatus"
            android:layout_alignTop="@+id/textView9"
            android:text="@string/Candidates_Rashi"
            android:textColor="@color/Black" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView9"
            android:layout_alignStart="@+id/textView9"
            android:layout_below="@+id/textView9"
            android:layout_marginTop="10dp"
            android:text="@string/Candidates_Nadi"
            android:textColor="@color/Black" />

        <TextView
            android:id="@+id/textViewMothersName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView11"
            android:layout_alignBottom="@+id/textView11"
            android:layout_alignLeft="@+id/textViewFathersOccupation"
            android:layout_alignStart="@+id/textViewFathersOccupation"
            android:text="@string/Candidates_Nadi"
            android:textColor="@color/Black" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView11"
            android:layout_alignStart="@+id/textView11"
            android:layout_below="@+id/textView11"
            android:layout_marginTop="7dp"
            android:text="@string/Candidates_Mangal"
            android:textColor="@color/Black" />

        <TextView
            android:id="@+id/textViewMothersLivingStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView13"
            android:layout_alignLeft="@+id/textViewMothersName"
            android:layout_alignStart="@+id/textViewMothersName"
            android:text="@string/Candidates_Mangal"
            android:textColor="@color/Black" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView13"
            android:layout_alignStart="@+id/textView13"
            android:layout_below="@+id/textView13"
            android:layout_marginTop="14dp"
            android:text="@string/Candidates_Charan"
            android:textColor="@color/Black" />

        <TextView
            android:id="@+id/textViewExpectedCityCountry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView15"
            android:layout_alignLeft="@+id/textViewMothersLivingStatus"
            android:layout_alignStart="@+id/textViewMothersLivingStatus"
            android:text="@string/Candidates_Charan"
            android:textColor="@color/Black" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView8"
            android:layout_alignStart="@+id/textView8"
            android:layout_below="@+id/textView8"
            android:layout_marginTop="10dp"
            android:text="@string/Candidates_Gotra"
            android:textColor="@color/Black" />

        <TextView
            android:id="@+id/textViewGotra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView19"
            android:layout_alignLeft="@+id/textViewBrothersName"
            android:layout_alignStart="@+id/textViewBrothersName"
            android:text="@string/Candidates_Gotra"
            android:textColor="@color/Black" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView15"
            android:layout_alignStart="@+id/textView15"
            android:layout_below="@+id/textView15"
            android:layout_marginTop="8dp"
            android:text="@string/Candidates_Devak"
            android:textColor="@color/Black" />

        <TextView
            android:id="@+id/textViewBrothersName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView19"
            android:layout_alignLeft="@+id/textViewMothersLivingStatus"
            android:layout_alignStart="@+id/textViewMothersLivingStatus"
            android:layout_alignTop="@+id/textView19"
            android:text="@string/Candidates_Devak"
            android:textColor="@color/Black" />


    </RelativeLayout>

</android.support.v7.widget.CardView>

    </android.support.design.widget.AppBarLayout>

    </android.support.design.widget.CoordinatorLayout>