<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="in.mahesh.matrimony_project">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/matrimony_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/matrimony_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".UtilClasses.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".UtilClasses.WelcomeActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity android:name=".UtilClasses.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".UtilClasses.SplashActivity"
            android:theme="@style/AppTheme.NoActionBar">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>